<body>
    <div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
        <div class="form w-full max-w-md">
            <form action="/create" method="post" class="flex flex-col gap-4 bg-white p-6 rounded-lg shadow-lg">
                <input type="text" class="w-full p-2 border rounded" placeholder="Title" name = "title">
                <textarea class="w-full resize-none p-2 border rounded" placeholder="Description" name = "details"></textarea>
                <input type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600" value="Add Todo">
            </form>
        </div>
        <br><br>
        <div class="tasks w-full max-w-md space-y-4 flex flex-wrap gap-4">
            <% if(files.length > 0){ %>
                <% files.forEach((val)=> { %>
                    <div class="task bg-white p-4 rounded-lg shadow-md">
                        <h2 class="text-lg font-semibold"><%= val%></h2>
                        <p class="text-gray-700">This is the description of the first task.</p>
                        <a href="/files/<%= val %>" class="text-blue-600">Read More</a>
                        <a class="text-purple-500" href="/edit/<%= val %>">Edit name</a>
                    </div>
                <% }) %>
            <% } else { %>
                <h3>No Tasks</h3>
            <% } %>
